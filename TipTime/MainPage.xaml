<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="TipTime.MainPage">

    <ScrollView>
        <VerticalStackLayout
           Padding="25"
            Spacing="10">
            

            <Label
                Text="Bill" />
            <Entry
                x:Name="ValorGorjetaEntry"
                Placeholder="Insira o valor"/>

            <Label
                Text="Tip"
                 />
            <Label
                x:Name="ValorGorjetaLabel"
                Text="0,00"
                />
            <Label
                Text="Total"
                />
            <Label
                x:Name="ValorTotalLabel"
                Text="0,00"
                />
            <Label
                Text="Valor Final"
                />
            <Label 
                x:Name="GorjetaFinal"
                Text=""/>
            <Label
                Text="Tip Percentage"
            />
            <Label
                x:Name="Porcentagem"
                Text="15%"/>
            
            <!--aqui seria aquela bolinha - slider-->
            <Slider
                Maximum="100"
                Minimum="0"
                x:Name="porcentagemSlider"
                ValueChanged="porcentagemSlider_ValueChanged"
                />

            <Button
                x:Name="quinzePorcento"
                Text="15%" 
                Clicked="quinzePorcento_Clicked" />
            <Button
                x:Name="vinteporcento"
                Text="20%" 
                Clicked="vinteporcento_Clicked"/>
            <Button
                x:Name="roundDown"
                Text="Round Down" 
                Clicked="roundDown_Clicked" />
            <Button
                x:Name="RoundUp"
                Text="Round Up" 
                Clicked="RoundUp_Clicked"/>

        </VerticalStackLayout>
    </ScrollView>

</ContentPage>
